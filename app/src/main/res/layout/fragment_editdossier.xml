<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edLinLayouy"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edSpinner"
        android:layout_gravity="center_horizontal"
        android:layout_toStartOf="@+id/edBtn"
        android:layout_alignBottom="@+id/edBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voeg toe"
        android:id="@+id/edBtn"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/edToggleButton"
        android:layout_toStartOf="@+id/edToggleButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locatie"
        android:id="@+id/edLocation"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edExtraEdit"
        android:layout_alignRight="@+id/edToggleButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edExtraEdit"
        android:hint="Extra edit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edExtra"
        android:layout_alignRight="@+id/edToggleButton" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edToggleButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Extra"
        android:id="@+id/edExtra"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edSpinner"
        android:layout_alignEnd="@+id/edToggleButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edLocationEdit"
        android:hint="Location edit"
        android:layout_below="@+id/edLocation"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>