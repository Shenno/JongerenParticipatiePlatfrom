<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundandbordersforquestions"
    android:descendantFocusability="blocksDescendants"
    android:weightSum="1">


    <TextView
        android:id="@+id/amsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingBottom="5dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/WhiteSmoke"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/amsQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:maxLength="40"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="Title"
        android:maxLines="1"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/amsImage"
        android:layout_toStartOf="@+id/amsDate"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/amsQuestionExtra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amsDate"
        android:layout_toEndOf="@+id/amsImage"
        android:maxLength="150"
        android:maxLines="2"
        android:paddingLeft="2dp"
        android:text="Question Details"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/WhiteSmoke"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/amsImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Medium Text"
        android:gravity="center"
        android:textColor="@color/WhiteSmoke"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:background="@drawable/circlebackgroundfortextview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

</RelativeLayout>